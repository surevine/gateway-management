     xmlns:context="http://www.springframework.org/schema/context"
     xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:component-scan base-package="controllers, com.surevine.gateway"/>

	<bean id="auditService" class="com.surevine.gateway.auditing.LogfileAuditServiceImpl" />
	<bean id="auditActionFactory" class="com.surevine.gateway.auditing.action.LogfileAuditActionFactory" />

	<bean id="authService" class="com.surevine.gateway.auth.PublicAuthService" />

</beans>